<form asp-action="Delete">
    <input type="hidden" asp-for="CategoriaId" />
    <input type="submit" value="Delete" class="btn btn-outline-danger mt-3 px-5 py-1 me-3" />
    <a asp-action="Index" class="btn btn-outline-info align-items-center px-5 mt-3 justify-content-center py-1">
        <ion-icon name="arrow-back-outline" class="me-2 align-content-center"></ion-icon>
        Voltar
    </a>
</form>
